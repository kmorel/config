; -*- ini-generic -*-
;

[include]
        path = gitconfig.base

[alias]
        track-named-branch = !sh -c 'git branch --set-upstream-to=$0/$1 $1'

[push]
        default = upstream

[url "git@gitlab.kitware.com:"]
        insteadOf = https://gitlab.kitware.com/

[url "git@github.com:"]
        insteadOf = https://github.com/
